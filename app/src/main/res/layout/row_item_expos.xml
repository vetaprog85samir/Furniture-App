<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/row_item_expos_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_80sdp">

                        <ImageView
                            android:id="@+id/row_item_expos_fav_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_7sdp"
                            android:background="#F4ECEC"
                            android:src="@drawable/ic_outline_favorite_border_grey" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/row_item_expos_expo_name_tv"
                            android:layout_width="match_parent"
                            android:gravity="bottom"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:text="@string/name_of_expo" />

                        <TextView
                            android:id="@+id/row_item_expos_expo_type_tv"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="@string/type_of_expo" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/row_item_expos_expo_address_tv"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/address_of_expo"
                    app:drawableEndCompat="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/row_item_expos_comments_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/expo_rating"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1" />
            </LinearLayout>

            <androidx.cardview.widget.CardView

                android:id="@+id/furn_row_item_icon_cv"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_80sdp">

                <ImageView
                    android:id="@+id/row_item_expos_expo_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"
                    tools:layout_editor_absoluteX="161dp"
                    tools:layout_editor_absoluteY="33dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/light_grey" />

    </LinearLayout>
</layout>