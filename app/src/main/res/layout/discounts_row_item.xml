<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/discounts_row_item_product_img_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/discounts_row_item_rl"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-70dp"
            android:layout_marginEnd="@dimen/_70sdp">

            <ImageView
                android:id="@+id/discounts_row_item_product_img_iv"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/chair" />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/discounts_row_item_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/discounts_row_item_ll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_300sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_corners_bordered_rect"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/discounts_row_item_furn_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/discounts_row_item_furn_no2_tv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/bg_elevated_rounded_corners_rect"
                        android:gravity="center"
                        android:text="06" />

                    <TextView
                        android:id="@+id/discounts_row_item_furn_no3_tv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/bg_elevated_rounded_corners_rect"
                        android:gravity="center"
                        android:text="24" />

                    <TextView
                        android:id="@+id/discounts_row_item_furn_no4_tv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/bg_elevated_rounded_corners_rect"
                        android:gravity="center"
                        android:text="50" />

                    <TextView
                        android:id="@+id/discounts_row_item_furn_no1_tv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/bg_elevated_rounded_corners_rect"
                        android:gravity="center"
                        android:text="33" />

                    <LinearLayout
                        android:id="@+id/discounts_row_item_furn_name_logo_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/discounts_row_item_furn_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="ارت هاوس"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/discounts_row_item_furn_logo_cv"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:elevation="0dp"
                            app:cardCornerRadius="@dimen/_15sdp">

                            <ImageView
                                android:id="@+id/discounts_row_item_furn_logo_iv"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/flash_sale2_2x" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/light_grey" />

                <TextView
                    android:id="@+id/discounts_row_item_discount_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="انتريه مودرن"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/discounts_row_item_product_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/discounts_row_item_product_ll_no1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/discounts_row_item_product1_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="كنبه" />

                        <TextView
                            android:id="@+id/discounts_row_item_product1_no_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="2" />

                        <ImageView
                            android:id="@+id/discounts_row_item_product1_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_chair" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discounts_row_item_product_ll_no2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/discounts_row_item_product2_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="كنبه" />

                        <TextView
                            android:id="@+id/discounts_row_item_product2_no_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="2" />

                        <ImageView
                            android:id="@+id/discounts_row_item_product2_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_chair" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discounts_row_item_product_ll_no3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/discounts_row_item_product3_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="كنبه" />

                        <TextView
                            android:id="@+id/discounts_row_item_product3_no_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:text="2" />

                        <ImageView
                            android:id="@+id/discounts_row_item_product3_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_chair" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discounts_row_item_price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/discounts_row_item_price_before_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:foreground="@drawable/strike_through_foreground"
                        android:text="250 جنيه"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discounts_row_item_price_after_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 جنيه"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="سعر العرض"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discounts_row_item_order_now_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/bg_rounded_corners_rect_grey"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_outline_shopping_bag_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/order_now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>





            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </RelativeLayout>

    </RelativeLayout>
</layout>