<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:text="الفروع"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:text="اختر الفرع"/>

        <Spinner
            android:id="@+id/fragment_expo_info_select_branch_sp"
            android:background="@drawable/bg_spinner_outlined"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layoutDirection="rtl"
            android:layout_margin="@dimen/_10sdp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:text="التفاصيل"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fragment_expo_info_branch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:text="فرع الاسكندرية"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fragment_expo_info_branch_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="كليوباترا، شارع الكورنيش، أمام إشارة كليوباترا"
            app:drawableEndCompat="@drawable/ic_baseline_location_on_24" />
        <TextView
            android:id="@+id/fragment_expo_info_branch_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp"
            android:text="01000000002"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="end"
            app:drawableEndCompat="@drawable/ic_baseline_phone_24" />
        <TextView
            android:id="@+id/fragment_expo_info_branch_working_hrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="من 8 ص إلى 10 م"
            app:drawableEndCompat="@drawable/ic_baseline_watch_later_24" />

    </LinearLayout>
</layout>